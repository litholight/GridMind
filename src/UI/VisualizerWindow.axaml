<!-- src/UI/VisualizerWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GridMind.UI"
        x:Class="GridMind.UI.VisualizerWindow"
        Title="GridMind Visualizer"
        Width="800" Height="800">
    <StackPanel>
        <TextBlock Text="GridMind Visualizer" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
        <!-- Container for the visualizer control -->
        <Grid Name="MainGridContainer" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <local:GridVisualizer Name="GridVisualizerControl"/>
        </Grid>
        <!-- Step and Play buttons -->
        <Button Name="StepButton" Content="Step" HorizontalAlignment="Center" Width="100"/>
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Center" Width="100" Margin="10"/>
        <!-- Status label -->
        <TextBlock Name="StatusLabel" Text="Agent Status: " HorizontalAlignment="Center" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>